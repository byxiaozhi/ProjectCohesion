<UserControl x:Class="ProjectCohesion.Controls.MainWindow.RightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCohesion.Controls.MainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid FlowDirection="RightToLeft">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="#e5e5e5" BorderThickness="0,0,1,0">
            <StackPanel Width="40" Background="#f3f3f3">

            </StackPanel>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderBrush="#e5e5e5" BorderThickness="0,0,0,1" Margin="0,0,-2,0">
                <StackPanel Orientation="Horizontal" Height="39" Background="#f3f3f3">
                    <TextBlock></TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
