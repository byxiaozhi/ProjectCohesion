<Application x:Class="ProjectCohesion.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjectCohesion" 
             xmlns:resources="clr-namespace:ProjectCohesion.Resources"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <resources:ThemeResourceDictionary
                    Source="Resources/Styles/Colors.Light.xaml"
                    LightSource="Resources/Styles/Colors.Light.xaml"
                    DarkSource="Resources/Styles/Colors.Dark.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
